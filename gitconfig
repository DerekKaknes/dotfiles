[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[format]
  pretty = format:%C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an, %cr]%Creset
[merge]
  ff = only
[push]
  default = current
[pull]
  rebase = true
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[include]
  path = ~/.gitconfig.local
